#!/usr/bin/php
<?php

$usage = <<<EOH
Usage: client add|list
Create a new API client: client add <client-name> <contact-info> <auth-key>
List all existing API clients: client list

EOH;

if ($argc < 2) {
    die($usage);
}

$db = new SQLite3(__DIR__ . '/../db/api.db');

if ('list' == $argv[1] && $result = $db->query('SELECT * FROM client')) {
    $count = 0;
    while ($client = $result->fetchArray(SQLITE3_ASSOC)) {
        echo "Name:\t\t$client[name]", PHP_EOL,
            "Contact:\t$client[contact]", PHP_EOL,
            "Last Request:\t$client[last_request]", PHP_EOL,
            "Authorization:\t$client[authorization]", PHP_EOL,
            "---", PHP_EOL;
        $count++;
    }

    echo "Total Clients: $count", PHP_EOL;
} else if ('add' == $argv[1]) {
    if (!isset($argv[2])) {
        die($usage);
    }

    $name    = $argv[2];
    $contact = isset($argv[3]) ? $argv[3] : '';
    $key     = isset($argv[4]) ? $argv[4] : uniqid('', true);

    $create_client = "
        INSERT INTO client
            (name, contact, authorization)
        VALUES
            ('$name', '$contact', '$key')
    ";

    if ($db->exec($create_client)) {
        echo "New client created successfully with Authorization key: $key",
            PHP_EOL;
    } else {
        echo sprintf(
            "An error occurred while attempting create a new client: %s (%s)%s",
            $db->lastErrorMsg(),
            $db->lastErrorCode(),
            PHP_EOL
        );
    }

} else {
    die($usage);
}
